{
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["es2020"],
		"module": "CommonJS",
		"moduleResolution": "node",
		"outDir": "./dist",
		"resolveJsonModule": true,
		"rootDir": "./src",
		"skipLibCheck": true,
    "target": "ES2020",
		"sourceMap": true,
		"strict": true
	},
	"exclude": ["node_modules", "**/*.spec.ts", "dist"],
	"include": ["src/**/*"]
}
